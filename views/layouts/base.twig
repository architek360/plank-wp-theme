{% block html_head_container %}
{% include 'includes/html-header.twig' %}
    {% block head %}
    {% endblock %}
    </head>
{% endblock %}
    <body class="{{ body_class }}" data-template="layouts/base.twig">
        <header class="header site-header">
            {% block header %}
            <div class="container">
                <h3 id="site-title" role="banner">
                    <a class="site-title" href="/" rel="home">{{site.name}} <small>{{ site.description }}</small></a>
                </h3>
                {% block navigation %}
                    {% include('includes/navigation.twig') %}
                {% endblock %}
            </div>
            {% endblock %}
        </header>


        <section id="content" role="main" class="content-wrapper">
            <div class="{{post.post_type}} {{ post.post_name }}">

                {% include('includes/page-header.twig') %}

                <div class="wrapper {{sidebar_class}}">
                    {% block content %}
                        Sorry, no content
                    {% endblock %}
                </div>
                {% if sidebar %}
                    <aside class="layout-sidebar">
                        {{sidebar}}
                    </aside>
                {% endif %}
            </div>
        </section>

    {% block footer %}
        <footer id="footer">
            {% include 'footer.twig' %}
        </footer>
        {{ function('wp_footer') }}
    {% endblock %}
    <script type="text/javascript" src="{{ theme.link }}/dist/site.js"></script>
    </body>
</html>
