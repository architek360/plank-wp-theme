{% extends "layouts/base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<div class="article-body">
					<div class="container">
						{{ post.content }}
					</div>
				</div>
			</section>

		</article>
	</div> <!-- /content-wrapper -->
{% endblock %}